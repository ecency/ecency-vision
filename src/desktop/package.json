{
  "name": "ecency-surfer",
  "productName": "Ecency",
  "description": "Ecency desktop application reimagined for Windows, Mac, Linux users, start earning cryptocurrency!",
  "private": false,
  "author": "Ecency <hello@ecency.com>",
  "version": "3.0.35",
  "copyright": "Â© 2020, Ecency",
  "license": "MIT",
  "homepage": "https://ecency.com",
  "scripts": {
    "build": "concurrently \"yarn build-main\" \"yarn build-renderer\"",
    "build-dll": "cross-env NODE_ENV=development webpack --config ./configs/webpack.config.renderer.dev.dll.babel.js --colors",
    "build-main": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.main.prod.babel.js --colors",
    "build-renderer": "cross-env NODE_ENV=production webpack --config ./configs/webpack.config.renderer.prod.babel.js --colors",
    "start-main-dev": "cross-env START_HOT=1 NODE_ENV=development electron -r ./internals/scripts/BabelRegister ./app/main.dev.ts",
    "dev": "cross-env START_HOT=1 node -r @babel/register ./internals/scripts/CheckPortInUse.js && cross-env START_HOT=1 yarn start-renderer-dev",
    "start-renderer-dev": "cross-env NODE_ENV=development webpack-dev-server --config configs/webpack.config.renderer.dev.babel.js",
    "package": "yarn build && electron-builder build --publish never",
    "package-all": "yarn build && electron-builder build -wml",
    "publish-mac": "yarn build && electron-builder build -m --publish always",
    "publish-win": "yarn build && electron-builder build -w --publish always",
    "publish-unix": "yarn build && electron-builder build -l --publish always",
    "publish-all": "yarn build && electron-builder build -wml --publish always"
  },
  "build": {
    "productName": "Ecency",
    "appId": "app.esteem.surfer",
    "files": [
      "dist/",
      "img/",
      "node_modules/",
      "app.html",
      "main.prod.js",
      "main.prod.js.map",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.finance",
      "type": "distribution",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "dmg": {
      "background": "resources/dmg-bg.png",
      "window": {
        "width": 600,
        "height": 578
      },
      "contents": [
        {
          "x": 490,
          "y": 255,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 215,
          "y": 255,
          "type": "file"
        }
      ]
    },
    "win": {
      "publisherName": "Esteem",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        "deb",
        "tar.gz",
        "AppImage",
        "rpm"
      ],
      "category": "Development"
    },
    "protocols": [
      {
        "name": "hive",
        "role": "Viewer",
        "schemes": [
          "hive",
          "ecency",
          "esteem"
        ]
      }
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "ecency",
        "repo": "ecency-vision",
        "vPrefixedTagName": false,
        "private": false,
        "releaseType": "draft",
        "allowPrerelease": true
      }
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/plugin-proposal-do-expressions": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-function-bind": "^7.11.5",
    "@babel/plugin-proposal-function-sent": "^7.10.4",
    "@babel/plugin-proposal-logical-assignment-operators": "^7.11.0",
    "@babel/plugin-proposal-pipeline-operator": "^7.10.5",
    "@babel/plugin-proposal-throw-expressions": "^7.10.4",
    "@babel/plugin-transform-react-constant-elements": "^7.10.4",
    "@babel/plugin-transform-react-inline-elements": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.10.5",
    "@teamsupercell/typings-for-css-modules-loader": "^2.2.1",
    "@types/jest": "^26.0.24",
    "@types/semver": "^7.5.0",
    "babel-plugin-dev-expression": "^0.2.2",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "detect-port": "^1.3.0",
    "electron": "^22.3.25",
    "electron-builder": "22.3.6",
    "electron-devtools-installer": "^2.2.4",
    "mini-css-extract-plugin": "^0.9.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "rimraf": "^3.0.0",
    "terser-webpack-plugin": "^3.0.7",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.0.9"
  },
  "peerDependencies": {
    "sass": "^1.56.2"
  },
  "dependencies": {
    "@babel/plugin-syntax-import-meta": "^7.10.4",
    "electron-debug": "^3.1.0",
    "electron-log": "^4.2.4",
    "electron-updater": "^6.1.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "react-hot-loader": "^4.12.21",
    "sass-loader": "10.1.1",
    "source-map-support": "^0.5.19"
  }
}
